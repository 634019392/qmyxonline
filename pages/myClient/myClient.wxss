}

.container {
    height: 100%;
    min-height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.record-item {
    margin-top: 10rpx;
    padding-bottom: 5rpx;
    padding-top: 5rpx;
    font-size: 30rpx;
    display: flex;
    justify-content: center;
}

.name{
    width: 80%;
    background-color: white;
    display: flex;
    flex-flow: column wrap;
    /*justify-content: space-between;*/
    /*border: 1px solid #eee;*/
    box-shadow: 1px 1px 5px #a4a4a4;
    padding: 2vh;
    border-radius: 10rpx;
    position: relative;
}
.name-row1 {
    display: flex;
    padding-top: 20rpx;
    justify-content: space-between;
}
.name-row2 {
    color: #787d82;
    padding-top: 20rpx;
    padding-right: 200rpx;
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
}
.protect-time {
    position: absolute;
    right: 0rpx;
    top: 30%;
}
.record-item:last-child {
    margin-bottom: 3%;
}